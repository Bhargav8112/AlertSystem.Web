@model AlertSystem.Models.HomeModel<AlertSystem.Models.PartSummaryViewModel>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var accordionId = "partTypeAccordion";
}

@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--datatable css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <!--datatable responsive css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
}

<style>
    .pagination {
        display: flex;
        justify-content: flex-end;
        gap: 8px;
        margin-top: 10px;
    }

        .pagination a {
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-decoration: none;
        }

    #loaderOverlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
    }

    .loader-backdrop {
        position: absolute;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(5px);
        background-color: rgba(255, 255, 255, 0.4);
    }

    .loader-spinner {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>
<div id="loaderOverlay" style="display: none;">
    <div class="loader-backdrop"></div>
    <div class="loader-spinner">
        <div class="spinner-border text-primary" role="status" style="width: 4rem; height: 4rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>


<div id="dropdownandradiodiv">
    <div class="">
        <div class="row">
            <!-- Sidebar (like Myntra filters) -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mb-3">System Filter</h5>
                        <input type="hidden" id="dropdwonvalue" value="@Model.Systemname" />
                        <div id="systemCheckboxList" style="display: flex; flex-direction: column; gap: 10px;">
                            <div class="form-check">
                                <input type="checkbox"
                                       class="form-check-input system-checkbox"
                                       id="system_all"
                                       name="selectedSystems"
                                       value=""
                                       @(Model.Systemname == null ? "checked" : "")
                                       onchange="filterBySystem(null)">
                                <label class="form-check-label" for="system_all">ALL</label>
                            </div>
                            @foreach (var item in Model.SystemnameList)
                            {
                                <div class="form-check">
                                    <input type="checkbox"
                                           class="form-check-input system-checkbox"
                                           id="system_@item.SystemNum"
                                           name="selectedSystems"
                                           value="@item.SystemNum"
                                           @(Model.Systemname == item.SystemNum ? "checked" : "")
                                           onchange="filterBySystem(this.value)">
                                    <label class="form-check-label" for="system_@item.SystemNum">@item.SystemNum</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>


            <!-- Main content -->
            <div class="col-md-9">

                <div class="card mb-3">
                    <div class="card-body">
                        <div id="radioButtons" class="mt-3">
                            <div class="row">
                                <div class="col">


                                    <div class="form-check form-check-inline me-3">
                                        <input type="radio" class="form-check-input" id="rbtnAssembly" name="filterOption" value="Assembly" @(Model.Parttype == "Assembly" ? "checked" : "") />
                                        <label class="form-check-label" for="rbtnAssembly">Assembly</label>
                                    </div>
                                    <div class="form-check form-check-inline me-3">
                                        <input type="radio" class="form-check-input" id="rbtnPart" name="filterOption" value="Part" @(Model.Parttype == "Part" ? "checked" : "") />
                                        <label class="form-check-label" for="rbtnPart">Part</label>
                                    </div>
                                    <div class="form-check form-check-inline me-3">
                                        <input type="radio" class="form-check-input" id="rbtnSubAssembly" name="filterOption" value="Sub Assembly" @(Model.Parttype == "Sub Assembly" ? "checked" : "") />
                                        <label class="form-check-label" for="rbtnSubAssembly">Sub Assembly</label>
                                    </div>
                                    <div class="form-check form-check-inline me-3">
                                        <input type="radio" class="form-check-input" id="rbtnNotFound" name="filterOption" value="Not Found" @(Model.Parttype == "Not Found" ? "checked" : "") />
                                        <label class="form-check-label" for="rbtnNotFound">Not Found</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-check-inline me-3">
                                        <input type="radio" class="form-check-input" id="rbtnOnHandQty" name="filterOption" value="onHandQty" onclick="filterOption('onHandQty')" />
                                        <label class="form-check-label" for="rbtnOnHandQty">On Hand Qty</label>
                                    </div>
                                    <div class="form-check form-check-inline me-3">
                                        <input type="radio" class="form-check-input" id="rbtnSTKtoCUS" name="filterOption" value="stkToCus" onclick="filterOption('stkToCus')" />
                                        <label class="form-check-label" for="rbtnSTKtoCUS">STK-CUS</label>
                                    </div>
                                    <div class="form-check form-check-inline me-3">
                                        <input type="radio" class="form-check-input" id="rbtnCycleTime" name="filterOption" value="cycleTime" onclick="filterOption('cycleTime')" />
                                        <label class="form-check-label" for="rbtnCycleTime">Cycle Time</label>
                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                </div>

                <div id="Maintabledata">
                    @Html.Partial("_Index", Model)
                </div>
                <div id="filterwisedata" style="display:none">
                    @Html.Partial("SubIndex", Model)
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!--datatable js-->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <script src="~/assets/js/pages/datatables.init.js"></script>
    <script src="~/assets/js/pages/select2.init.js"></script>
    <script src="~/assets/js/app.js"></script>

    <script>
        document.querySelectorAll('input[name="filterOption"]').forEach(function (radio) {
            radio.addEventListener('change', function () {
                const parttype = this.value;
               
                const urlParams = new URLSearchParams(window.location.search);
                const selectedSystem = urlParams.get('selectedSystem') || '';
                const page = urlParams.get('page') || 1;
          

                // Redirect with both parttype and selectedSystem
                const url = `/Home/Index?selectedSystem=${encodeURIComponent(selectedSystem)}&page=${page}&parttype=${encodeURIComponent(parttype)}`;
                window.location.href = url;
            });
        });
        function filterOption(selectvalue) {
            $("#dropdownandradiodiv").hide();
            $("#loaderOverlay").show();
            var url = '@Url.Action("OnhandstkcycleFilter", "Home")';
            const systemname = document.getElementById("dropdwonvalue").value;
            $.ajax({
                url: url,
                type: 'GET',
                data: { selectvalue: selectvalue, slectsystem: systemname },
                success: function (response) {
                    $('#filterwisedata').html(response);
                },
                complete: function () {
                    // Hide loader after request completes
                    $("#loaderOverlay").hide();
                }
            });

            $("#Maintabledata").hide();
            $("#filterwisedata").show();

        }
        function filterBySystem(selectedValue) {
             var url = '@Url.Action("Index", "Home")';
            $.ajax({
                    url: url,
                    type: 'GET',
                    data: { selectedSystem: selectedValue },
                    success: function (response) {
                        window.location.href = url + '?selectedSystem=' + encodeURIComponent(selectedValue);
                    },
            });
        }
        function ShowPrioritymodel(parts) {
            debugger
            $("#loaderOverlay").show();
            $('#priorityModal').modal('show');

                    const systemname = document.getElementById("dropdwonvalue").value;

            var url = '@Url.Action("GetPriorityModelData", "Home")';
            let selectedPartNums = parts;

            $.ajax({
                url: url,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ systemName: systemname, selectedPartNums: selectedPartNums }),
                success: function (response) {
                    $('#PrioriymodePopuplID').html(response);
                    $('#PrioritymodelID').modal('show');

                    $('#datatablesNEW').DataTable({
                        paging: true,
                        searching: true,
                        responsive: true,
                        destroy: true // Important: avoid multiple initializations
                    });
                },
                complete: function () {
                    $("#loaderOverlay").hide();
                },
                error: function (xhr) {
                    console.error("Error fetching data:", xhr.responseText);
                }
            });
        }
    </script>
} 